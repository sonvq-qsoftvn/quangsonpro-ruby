<div class="post">
    <h1><%= @post.title %></h1>
    <small><%= @post.created_at.strftime("%d %b %Y") %></small>
    <p><%= @post.body %></p>
    <!--<%= link_to "Edit Post", edit_post_path %> | <%= link_to "Delete post", @post, method: :delete, data: { confirm: "Are you sure you want to delete?" } %>-->
    <p>Category: <%= link_to @post.category.name, category_path(:id => @post.category.id) %></p>
    <p><%= link_to "Back to overview", posts_path %></p>
</div>